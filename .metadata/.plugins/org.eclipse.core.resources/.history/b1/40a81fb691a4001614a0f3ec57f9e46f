package threads;

public class Test {
	public static void main(String[] args) {
		int[] primes = new int[1000];
		
		
		Thread t = new Thread(() -> { 
			boolean running = true;
			int count = 0;
			int num = 1;
			while(running) {
				if(isPrime(num)) {
					primes[count] = num;
					count++;
				}
				num++;
				
				if(count == 1000)
					running = false;
			}
			System.out.println("Thread Complete");
		});
		
		t.start();
		try {
			t.join();
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	
	}
	
	static boolean isPrime(int num) {
		for(int i = 2; i < num; i++)
			if(num % i == 0)
				return false;
		return true;
	}
	
	static boolean isPrime2(int num) {
		for(int i = 2; i < num; i++)
			if(num % i == 0)
				return false;
		return true;
	}
}
